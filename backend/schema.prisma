datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id                 String     @id @default(cuid())
  productName        String     @default("")
  productDescription String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  productCategory    Category[] @relation("Product_productCategory")
  productPrice       Int
  image              String?
}

model User {
  id           String @id @default(cuid())
  name         String @default("")
  userEmail    String @unique @default("")
  userPassword String
  userPhone    String @default("")
  userAddress  String @default("")
  userRole     String @default("")
}

model Category {
  id                           String    @id @default(cuid())
  categoryName                 String    @default("")
  from_Product_productCategory Product[] @relation("Product_productCategory")
}
